<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "products/#{product.image_url}"%></td>
        <td><span class="product_title"><%= product.title%></span>
        <%= product.description %><br />
        <%= link_to "Read more", product_path(product)%>
        </td>
        <td><%= print_price(product.price) %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Product', new_product_path, id: "new_product"%>
